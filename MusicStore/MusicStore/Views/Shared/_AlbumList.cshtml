@model IEnumerable<MusicStore.Models.Albums>

<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-md-4">
            <p>
                <a href="@Url.Action("Details","Store",new {id=album.AlbumId })"> <img src="@album.AlbumArtUrl" alt="@album.Title" /></a>
            </p>
            <p>名称：@album.Title</p>
            <p>价格：@album.Price</p>
        </div>
    }
</div>